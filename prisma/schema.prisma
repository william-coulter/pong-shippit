generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://pong:pong@localhost:5432/pong"
}

model Player {
  name    String   @id
  created DateTime @default(now())
  elo     Int

  playedGames PlayedGame[]
}

model Game {
  id      Int      @id @default(autoincrement())
  created DateTime @default(now())

  playedBy PlayedGame[]
}

model PlayedGame {
  id     Int      @id @default(autoincrement())
  played DateTime @default(now())

  player1     Player @relation(fields: [player1Name], references: [name])
  player1Name String
  player2     Player @relation(fields: [player2Name], references: [name])
  player2Name String

  game   Game @relation(fields: [gameId], references: [id])
  gameId Int

}
