generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://pong:pong@localhost:5432/pong"
}

model Player {
  name    String   @id
  created DateTime @default(now())
  elo     Int

  wins   Game[] @relation("wins")
  losses Game[] @relation("losses")
  @@map("players")
}

model Game {
  id      Int      @id @default(autoincrement())
  created DateTime @default(now())

  winner     Player @relation("wins", fields: [winnerName], references: [name])
  winnerName String

  loser     Player @relation("losses", fields: [loserName], references: [name])
  loserName String

  winningScore Int
  losingScore  Int

  @@map("games")
}
